<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ricette">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ricette"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ricette"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ricette">

        <activity android:name=".fragments.DetailRecipeFragment" />

        <activity android:name=".WelcomePageActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
    </application>

</manifest>