<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvRecipeCard"
    android:layout_width="150dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cvImageViewRecipeCard"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/ivRecipeCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_food_test"
                android:background="#B5B5B5"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvRecipeCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cvImageViewRecipeCard"
            android:layout_marginTop="6dp"
            android:text="Nama resep makanan"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"/>


        
    </RelativeLayout>

</androidx.cardview.widget.CardView>